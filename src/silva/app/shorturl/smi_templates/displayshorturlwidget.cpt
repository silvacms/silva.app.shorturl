<div class="display-shorturl-widget">
    <input type="text" readonly="readonly" value="#" id="#" name="#" class="#"
           tal:attributes="name widget.identifier;
                           value widget.inputValue();
                           id widget.htmlId();
                           class widget.htmlClass();
                           widget.htmlAttributes()" />
    <a href="${widget.inputValue()}" target="_blank">Try the short url</a>
</div>
